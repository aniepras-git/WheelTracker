<Window x:Class="WheelTracker.Views.OpenPositionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Open Positions" Height="500" Width="800">
    <Window.Resources>
        <!-- MaterialDesign setup -->
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0">
            <TextBox Width="100" Text="{Binding FilterTicker}" materialDesign:HintAssist.Hint="Filter Ticker"/>
            <CheckBox Content="Open Only" IsChecked="{Binding ShowOnlyOpen}" Margin="10,0"/>
            <Button Command="{Binding RefreshQuotesCommand}" Content="Refresh Quotes" Style="{StaticResource MaterialDesignRaisedButton}"/>
            <Button Command="{Binding SaveChangesCommand}" Content="Save" Margin="5,0"/>
            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Margin="10,0"/>
        </StackPanel>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Trades}" AutoGenerateColumns="False" Margin="10" AlternatingRowBackground="LightGray">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ticker" Binding="{Binding Ticker}"/>
                <DataGridTextColumn Header="Strategy" Binding="{Binding Strategy}"/>
                <DataGridTextColumn Header="Strike" Binding="{Binding Strike}"/>
                <DataGridTextColumn Header="Premium" Binding="{Binding Premium, StringFormat=C2}"/>
                <DataGridTextColumn Header="Annual ROI" Binding="{Binding AnnualReturn, StringFormat=P1}"/>
                <DataGridTextColumn Header="Unrealized P/L" Binding="{Binding UnrealizedGainLoss, StringFormat=C2}"/>
                <!-- Add more: DTE, Moneyness with conditional coloring via converters -->
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>