<Window x:Class="WheelTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WheelTracker"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:helpers="clr-namespace:WheelTracker.Helpers"
        mc:Ignorable="d"
        Title="Wheel Tracker - Options Strategy Tool" Height="600" Width="900"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid>
        <TabControl>
            <TabItem Header="Portfolio Dashboard">
                <StackPanel>
                    <TextBlock Text="Current Positions (Wheel Cycles)" Style="{StaticResource MaterialDesignHeadline6TextBlock}" />
                    <DataGrid ItemsSource="{Binding Positions}" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" />
                            <DataGridTextColumn Header="Strategy Stage" Binding="{Binding Stage}" />
                            <DataGridTextColumn Header="Breakeven" Binding="{Binding Breakeven, StringFormat=C2}" />
                            <DataGridTextColumn Header="Premium Collected" Binding="{Binding Premium, StringFormat=C2}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
            <TabItem Header="Alerts">
                <StackPanel>
                    <materialDesign:DatePicker SelectedDate="{Binding ExpirationDate}" 
                                               materialDesign:HintAssist.Hint="Expiration Date Threshold" />
                    <!-- Add more alert controls here, e.g., sliders for IV changes -->
                </StackPanel>
            </TabItem>
            <TabItem Header="Reports">
                <!-- Integrate charts here, e.g., using LiveCharts.Wpf -->
                <TextBlock Text="Performance Metrics: ROI, P/L Charts" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>