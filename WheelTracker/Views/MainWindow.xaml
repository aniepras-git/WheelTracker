<Window x:Class="WheelTracker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:helpers="clr-namespace:WheelTracker.Helpers"
        xmlns:models="clr-namespace:WheelTracker.Models"
        mc:Ignorable="d"
        Title="Wheel Tracker - Options Strategy Tool" Height="600" Width="900"
        Style="{StaticResource MaterialDesignWindow}">
    <Grid>
        <TabControl>
            <TabItem Header="Portfolio Dashboard">
                <StackPanel>
                    <TextBlock Text="Current Trades (Wheel Cycles)" Style="{StaticResource MaterialDesignHeadline6TextBlock}" />
                    <DataGrid ItemsSource="{Binding Trades}" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Ticker" Binding="{Binding Ticker}" />
                            <DataGridTemplateColumn Header="Close Trans Type">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding CloseTransType}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <ComboBox ItemsSource="{helpers:EnumToItemsSource {x:Type models:CloseType}}"
                                                  SelectedItem="{Binding CloseTransType}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Breakeven" Binding="{Binding Breakeven, StringFormat=C2}" />
                            <DataGridTextColumn Header="Premium Collected" Binding="{Binding Premium, StringFormat=C2}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
            <TabItem Header="Alerts">
                <StackPanel>
                    <materialDesign:MaterialDatePicker SelectedDate="{Binding ExpirationDate}" 
                                                       materialDesign:HintAssist.Hint="Expiration Date Threshold" />
                </StackPanel>
            </TabItem>
            <TabItem Header="Reports">
                <TextBlock Text="Performance Metrics: ROI, P/L Charts" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>