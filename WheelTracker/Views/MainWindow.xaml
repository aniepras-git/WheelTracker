<!-- Views/MainWindow.xaml -->
<Window x:Class="WheelTracker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WheelTracker.ViewModels"
        Title="Wheel Tracker" Height="250" Width="300">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Add New Trade" 
                Command="{Binding OpenTradeEntryCommand}" 
                Width="180" Height="35" Margin="0,0,0,15"/>
        <Button Content="Open Positions" 
                Command="{Binding OpenPositionsCommand}" 
                Width="180" Height="35"/>
    </StackPanel>
</Window>