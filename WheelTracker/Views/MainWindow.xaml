<Window x:Class="WheelTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WheelTracker"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:helpers="clr-namespace:WheelTracker.Helpers"
        mc:Ignorable="d"
        Title="Wheel Tracker - Options Strategy Tool" Height="600" Width="900"
        Style="{StaticResource MaterialDesignWindow}">
    <Grid>
        <TabControl>
            <TabItem Header="Portfolio Dashboard">
                <StackPanel>
                    <TextBlock Text="Current Trades (Wheel Cycles)" Style="{StaticResource MaterialDesignHeadline6TextBlock}" />
                    <DataGrid ItemsSource="{Binding Trades}" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" />
                            <DataGridTemplateColumn Header="Stage">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Stage}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <ComboBox ItemsSource="{helpers:EnumToItemsSource {x:Type local:WheelStage}}"
                                                  SelectedItem="{Binding Stage}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Breakeven" Binding="{Binding Breakeven, StringFormat=C2}" />
                            <DataGridTextColumn Header="Premium Collected" Binding="{Binding Premium, StringFormat=C2}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
            <TabItem Header="Alerts">
                <StackPanel>
                    <materialDesign:MaterialDatePicker SelectedDate="{Binding ExpirationDate}" 
                                                       materialDesign:HintAssist.Hint="Expiration Date Threshold" />
                    <!-- Add sliders or other controls for IV/price alerts -->
                </StackPanel>
            </TabItem>
            <TabItem Header="Reports">
                <TextBlock Text="Performance Metrics: ROI, P/L Charts" />
                <!-- Add LiveCharts here, e.g., <lvc:CartesianChart Series="{Binding ProfitLossSeries}" /> -->
            </TabItem>
        </TabControl>
    </Grid>
</Window>