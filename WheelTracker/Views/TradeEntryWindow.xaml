<Window x:Class="WheelTracker.Views.TradeEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WheelTracker.ViewModels"
        Title="Add Trade [DATACONTEXT]" 
        Height="400" Width="400">

    <!-- LOCAL RESOURCE – GUARANTEED TO BE FOUND -->
    <Window.Resources>
        <vm:IsOptionConverter x:Key="IsOptionConverter"/>
    </Window.Resources>

    <!-- VIEWMODEL -->
    <Window.DataContext>
        <vm:TradeEntryViewModel/>
    </Window.DataContext>

    <!-- LAYOUT -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" Margin="15" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <TextBlock Text="Ticker (required)" FontWeight="SemiBold" Margin="0,0,0,3"/>
                <TextBox Text="{Binding NewTrade.Ticker, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Open Date" FontWeight="SemiBold" Margin="0,0,0,3"/>
                <DatePicker SelectedDate="{Binding NewTrade.OpenDate}" Margin="0,0,0,10"/>

                <TextBlock Text="Action" FontWeight="SemiBold" Margin="0,0,0,3"/>
                <ComboBox ItemsSource="{x:Static vm:EnumHelper.ActionTypes}"
                          SelectedItem="{Binding NewTrade.Action}"
                          Margin="0,0,0,10"/>

                <TextBlock Text="Strategy" FontWeight="SemiBold" Margin="0,0,0,3"/>
                <ComboBox ItemsSource="{x:Static vm:EnumHelper.Strategies}"
                          SelectedItem="{Binding NewTrade.Strategy}"
                          IsEnabled="{Binding NewTrade.Action, Converter={StaticResource IsOptionConverter}}"
                          Margin="0,0,0,10"/>

                <TextBlock Text="Price at Open" FontWeight="SemiBold" Margin="0,0,0,3"/>
                <TextBox Text="{Binding NewTrade.PriceAtOpen}" Margin="0,0,0,10"/>

                <TextBlock Text="Expiration" FontWeight="SemiBold" Margin="0,0,0,3"/>
                <DatePicker SelectedDate="{Binding NewTrade.Expiration}" Margin="0,0,0,10"/>

                <TextBlock Text="Strike" FontWeight="SemiBold" Margin="0,0,0,3"/>
                <TextBox Text="{Binding NewTrade.Strike}" Margin="0,0,0,10"/>

                <TextBlock Text="Quantity (Contracts)" FontWeight="SemiBold" Margin="0,0,0,3"/>
                <TextBox Text="{Binding NewTrade.Qty}" Margin="0,0,0,10"/>

                <TextBlock Text="Premium (Total Credit/Debit)" FontWeight="SemiBold" Margin="0,0,0,3"/>
                <TextBox Text="{Binding NewTrade.Premium}" Margin="0,0,0,10"/>

                <TextBlock Text="Fees" FontWeight="SemiBold" Margin="0,0,0,3"/>
                <TextBox Text="{Binding NewTrade.Fees}" Margin="0,0,0,15"/>

            </StackPanel>
        </ScrollViewer>

        <!-- SAVE BUTTON -->
        <Button Grid.Row="1"
                Content="Save Trade"
                Command="{Binding SaveCommand}"
                HorizontalAlignment="Right"
                Width="110" Height="36"
                Margin="10"
                FontWeight="SemiBold"/>

    </Grid>    
</Window>