<Window x:Class="WheelTracker.Views.TradeEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:WheelTracker.ViewModels"
        xmlns:helpers="clr-namespace:WheelTracker.Helpers"  <!-- For converters like IsOptionConverter -->
    mc:Ignorable="d"
        Title="New Trade Entry" Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        DataContext="{d:DesignInstance Type=local:TradeEntryViewModel, IsDesignTimeCreatable=True}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Converters: Assume EnumHelper.cs provides these -->
            <helpers:IsOptionConverter x:Key="IsOptionConverter" />
            <helpers:EnumToItemsSource x:Key="EnumToItemsSource" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="20">
        <ScrollViewer>
            <materialDesign:Card Padding="15" Margin="0,0,0,10">
                <StackPanel Orientation="Vertical" Spacing="10">
                    <!-- Ticker -->
                    <TextBox materialDesign:HintAssist.Hint="Ticker (e.g., AAPL)"
                             Text="{Binding NewTrade.Ticker, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                    <!-- Action (STO/BTO) -->
                    <ComboBox materialDesign:HintAssist.Hint="Action"
                              ItemsSource="{Binding Source={StaticResource EnumToItemsSource}, ConverterParameter={x:Type models:ActionType}}"
                              SelectedItem="{Binding NewTrade.Action}"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

                    <!-- Strategy (CSP, CC, etc.) -->
                    <ComboBox materialDesign:HintAssist.Hint="Strategy"
                              ItemsSource="{Binding Source={StaticResource EnumToItemsSource}, ConverterParameter={x:Type models:OptionStrategy}}"
                              SelectedItem="{Binding NewTrade.Strategy}"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

                    <!-- Qty -->
                    <TextBox materialDesign:HintAssist.Hint="Quantity (Contracts)"
                             Text="{Binding NewTrade.Qty, UpdateSourceTrigger=PropertyChanged}"
                             PreviewTextInput="NumberValidationTextBox"  <!-- Restrict to numbers via code-behind or behavior -->
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                        <!-- Premium -->
                        <TextBox materialDesign:HintAssist.Hint="Premium per Contract"
                             Text="{Binding NewTrade.Premium, UpdateSourceTrigger=PropertyChanged, StringFormat=C2}"
                             PreviewTextInput="NumberValidationTextBox"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                        <!-- Strike (Visible if option strategy) -->
                        <TextBox materialDesign:HintAssist.Hint="Strike Price"
                             Text="{Binding NewTrade.Strike, UpdateSourceTrigger=PropertyChanged, StringFormat=C2}"
                             PreviewTextInput="NumberValidationTextBox"
                             Visibility="{Binding NewTrade.Strategy, Converter={StaticResource IsOptionConverter}}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                        <!-- Expiration (Visible if option) -->
                        <materialDesign:DatePicker materialDesign:HintAssist.Hint="Expiration Date"
                                               SelectedDate="{Binding NewTrade.Expiration}"
                                               Visibility="{Binding NewTrade.Strategy, Converter={StaticResource IsOptionConverter}}"
                                               Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />

                        <!-- Open Date -->
                        <materialDesign:DatePicker materialDesign:HintAssist.Hint="Open Date"
                                               SelectedDate="{Binding NewTrade.OpenDate}"
                                               Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />

                        <!-- Fees -->
                        <TextBox materialDesign:HintAssist.Hint="Fees"
                             Text="{Binding NewTrade.Fees, UpdateSourceTrigger=PropertyChanged, StringFormat=C2}"
                             PreviewTextInput="NumberValidationTextBox"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                        <!-- Credit/Debit -->
                        <ComboBox materialDesign:HintAssist.Hint="Credit/Debit"
                              ItemsSource="{Binding Source={StaticResource EnumToItemsSource}, ConverterParameter={x:Type models:CreditDebitType}}"
                              SelectedItem="{Binding NewTrade.CreditDebit}"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,20,0,0">
                            <Button Content="Cancel"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Click="Cancel_Click" />
                            <!-- Code-behind: Close() -->
                            <Button Command="{Binding SaveCommand}"
                                Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                Content="Save" />
                        </StackPanel>
                </StackPanel>
            </materialDesign:Card>
        </ScrollViewer>
    </Grid>
</Window>