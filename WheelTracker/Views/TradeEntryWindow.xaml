<Window x:Class="WheelTracker.Views.TradeEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:WheelTracker.ViewModels"
        xmlns:helpers="clr-namespace:WheelTracker.Helpers"  <!-- Fixed: Ensure Helpers folder/namespace exists; add project ref if separate assembly -->
    mc:Ignorable="d"
        Title="New Trade Entry" Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        DataContext="{d:DesignInstance Type=local:TradeEntryViewModel, IsDesignTimeCreatable=True}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Converters: Assume in Helpers/ (e.g., EnumToItemsSource.cs, IsOptionConverter.cs) -->
            <helpers:IsOptionConverter x:Key="IsOptionConverter" />
            <helpers:EnumToItemsSource x:Key="EnumToItemsSource" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="20">
        <ScrollViewer>
            <materialDesign:Card Padding="15" Margin="0,0,0,10">
                <StackPanel Orientation="Vertical">
                    <!-- Fixed: Removed Spacing (use Margin on children if needed for compat) -->
                    <!-- Ticker -->
                    <TextBox materialDesign:HintAssist.Hint="Ticker (e.g., AAPL)"
                             Text="{Binding NewTrade.Ticker, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,10" />

                    <!-- Action (STO/BTO) -->
                    <ComboBox materialDesign:HintAssist.Hint="Action"
                              ItemsSource="{Binding Converter={StaticResource EnumToItemsSource}, ConverterParameter={x:Type models:ActionType}}"
                              SelectedItem="{Binding NewTrade.Action}"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}" Margin="0,0,0,10" />

                    <!-- Strategy (CSP, CC, etc.) -->
                    <ComboBox materialDesign:HintAssist.Hint="Strategy"
                              ItemsSource="{Binding Converter={StaticResource EnumToItemsSource}, ConverterParameter={x:Type models:OptionStrategy}}"
                              SelectedItem="{Binding NewTrade.Strategy}"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}" Margin="0,0,0,10" />

                    <!-- Qty -->
                    <TextBox materialDesign:HintAssist.Hint="Quantity (Contracts)"
                             Text="{Binding NewTrade.Qty, UpdateSourceTrigger=PropertyChanged}"
                             PreviewTextInput="NumberValidationTextBox"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,10" />

                    <!-- Premium -->
                    <TextBox materialDesign:HintAssist.Hint="Premium per Contract"
                             Text="{Binding NewTrade.Premium, UpdateSourceTrigger=PropertyChanged, StringFormat=C2}"
                             PreviewTextInput="NumberValidationTextBox"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,10" />

                    <!-- Strike (Visible if option strategy) -->
                    <TextBox materialDesign:HintAssist.Hint="Strike Price"
                             Text="{Binding NewTrade.Strike, UpdateSourceTrigger=PropertyChanged, StringFormat=C2}"
                             PreviewTextInput="NumberValidationTextBox"
                             Visibility="{Binding NewTrade.Strategy, Converter={StaticResource IsOptionConverter}}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,10" />

                    <!-- Expiration (Visible if option) -->
                    <materialDesign:DatePicker materialDesign:HintAssist.Hint="Expiration Date"
                                               SelectedDate="{Binding NewTrade.Expiration}"
                                               Visibility="{Binding NewTrade.Strategy, Converter={StaticResource IsOptionConverter}}"
                                               Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Margin="0,0,0,10" />

                    <!-- Open Date -->
                    <materialDesign:DatePicker materialDesign:HintAssist.Hint="Open Date"
                                               SelectedDate="{Binding NewTrade.OpenDate}"
                                               Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Margin="0,0,0,10" />

                    <!-- Fees -->
                    <TextBox materialDesign:HintAssist.Hint="Fees"
                             Text="{Binding NewTrade.Fees, UpdateSourceTrigger=PropertyChanged, StringFormat=C2}"
                             PreviewTextInput="NumberValidationTextBox"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,10" />

                    <!-- Credit/Debit -->
                    <ComboBox materialDesign:HintAssist.Hint="Credit/Debit"
                              ItemsSource="{Binding Converter={StaticResource EnumToItemsSource}, ConverterParameter={x:Type models:CreditDebitType}}"
                              SelectedItem="{Binding NewTrade.CreditDebit}"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}" Margin="0,0,0,10" />

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <!-- Fixed: Removed Spacing -->
                        <Button Style="{StaticResource MaterialDesignFlatButton}" Click="Cancel_Click" Margin="0,0,10,0">
                            <TextBlock Text="Cancel" />
                            <!-- Fixed: Single Content via child -->
                        </Button>
                        <Button Command="{Binding SaveCommand}" Style="{StaticResource MaterialDesignRaisedAccentButton}">
                            <TextBlock Text="Save" />
                            <!-- Fixed: Single Content via child -->
                        </Button>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>
        </ScrollViewer>
    </Grid>
</Window>